{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Edge against localhost",
      // "url": "http://[::1]:3000",
      // "webRoot": "${workspaceFolder}",
      "smartStep": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}\\**\\*.js",
        "**/*.js",
        "**/*.min.js",
        "**/node_modules/**/*.js",
        "**/dist/**/*.js",
        "<node_internals>/**"
      ]
    },
    {
      "command": "yarn start:dev",
      "name": "Run yarn dev",
      "request": "launch",
      "type": "node-terminal"
    },
  ]
}
